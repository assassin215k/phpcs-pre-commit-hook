{
    "name": "assassin215k/phpcs-pre-commit-hook",
    "description": "Fork of PHPCS check before commit",
    "type": "scripts",
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "Stanislav Malkin",
            "email": "stan@wickedreports.com"
        },
        {
            "name": "Ihor Fedan",
            "email": "info@iceorb.com.ua"
        }
    ],
    "autoload": {
        "psr-4": {
            "PHPCodeChecker\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "PHPCodeChecker\\Installer::postInstall"
        ],
        "post-update-cmd": [
            "PHPCodeChecker\\Installer::postInstall"
        ]
    },
    "require": {
        "squizlabs/php_codesniffer": "^3.6"
    },
    "conflict": {
        "wickedreports/phpcs-pre-commit-hook": "*"
    }
}
